<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Attendance_Activity.MorningSCan_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Morning In Scan"
        android:id="@+id/btnmorningIn"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textmorningIn"
            android:textSize="19dp"
            android:layout_marginLeft="33dp"
            android:text="abd"
            android:paddingTop="2dp"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Morning Out Scan"
        android:layout_marginTop="20dp"
        android:id="@+id/btnmorningOut"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textmorningOut"
            android:textSize="19dp"
            android:layout_marginLeft="33dp"
            android:text="abd"
            android:paddingTop="2dp"/>
    </LinearLayout>

</LinearLayout>