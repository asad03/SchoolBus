<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    android:gravity="center"
    android:orientation="vertical"
    android:padding="0dp"
    android:singleLine="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="0dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/imgstudnt"/>
        <ImageView
            android:layout_width="50dp"

            android:layout_height="25dp"

            android:src="@drawable/numberr"/>

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/text_studentRegister"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"


                android:hint="Sep 6, 2021"

                android:gravity="center"

                android:singleLine="true"
                android:textAlignment="center" />
        </HorizontalScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="0dp">
        <ImageView
            android:layout_width="50dp"

            android:layout_height="25dp"

            android:src="@drawable/name"/>

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/text_studentName"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"

                android:gravity="center"

                android:hint="343..."
                android:scrollHorizontally="true" />
        </HorizontalScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="0dp">
        <ImageView
            android:layout_width="50dp"

            android:layout_height="25dp"

            android:src="@drawable/name"/>

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/text_studentFatherName"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"

                android:gravity="center"

                android:hint="343..."
                android:scrollHorizontally="true" />
        </HorizontalScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="0dp">
        <ImageView
            android:layout_width="50dp"

            android:layout_height="25dp"

            android:src="@drawable/clas"/>

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/text_StudentClass"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"

                android:gravity="center"

                android:hint="343..."
                android:scrollHorizontally="true" />
        </HorizontalScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="0dp">
        <ImageView
            android:layout_width="50dp"

            android:layout_height="25dp"

            android:src="@drawable/call"/>

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/text_StudentMobileNo"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"

                android:gravity="center"

                android:hint="343..."
                android:scrollHorizontally="true"  />
        </HorizontalScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="0dp">
        <ImageView
            android:layout_width="50dp"

            android:layout_height="25dp"

            android:src="@drawable/email"/>

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/text_StudentEmail"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"

                android:gravity="center"

                android:hint="343..."
                android:scrollHorizontally="true"  />
        </HorizontalScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="0dp">
        <ImageView
            android:layout_width="50dp"

            android:layout_height="25dp"

            android:src="@drawable/location"/>

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/text_StudentLocation"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"

                android:gravity="center"

                android:hint="343..."
                android:scrollHorizontally="true"  />
        </HorizontalScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="0dp">
        <ImageView
            android:layout_width="50dp"

            android:layout_height="25dp"

            android:src="@drawable/bus"/>

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/text_StudentBus"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"

                android:gravity="center"

                android:hint="343..."
                android:scrollHorizontally="true"  />
        </HorizontalScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnstudentCall"
            android:layout_width="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_height="wrap_content"
            android:src="@drawable/call"/>
        <ImageButton
            android:id="@+id/btnstudentMsg"
            android:layout_width="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_height="wrap_content"
            android:src="@drawable/message"/>
<!--        <ImageButton-->

<!--            android:layout_width="wrap_content"-->
<!--            android:layout_marginLeft="9dp"-->
<!--            android:id="@+id/btncard"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:src="@drawable/card"/>-->

    </LinearLayout>

</LinearLayout>